import random

def redondear_al_multiplo_de_4(numero):
    return round(numero / 4) * 4

def juego_numero_ajustado():
    print("=== ðŸ‘¾Juego del NÃºmero Aleatorio Ajustado ðŸ‘¾===")

    
    while True:
        try:
            n1 = int(input("Ingrese el primer nÃºmero del rango (rango inferior): "))
            n2 = int(input("Ingrese el segundo nÃºmero del rango (rango superior): "))
            if n1 >= n2:
                print("Error: El primer nÃºmero debe ser menor que el segundo. Intenta nuevamente.\n")
            else:
                break
        except ValueError:
            print("Error: Debes ingresar nÃºmeros enteros.\n")

    
    numero_aleatorio = random.randint(n1, n2)
    numero_ajustado = redondear_al_multiplo_de_4(numero_aleatorio / 4)

    
    intentos = 3
    for intento in range(1, 4):
        try:
            adivinanza = int(input(f"\nIntento {intento}: Adivina el nÃºmero ajustado: "))
            if adivinanza == numero_ajustado:
                print("ðŸ‘»Â¡Felicidades!ðŸ‘» Adivinaste el nÃºmero correcto.")
                return
            else:
                if intento == 1:
                    print("No es correcto.")
                elif intento == 2:
                    pista = "mayor" if adivinanza < numero_ajustado else "menor"
                    print(f"Incorrecto. Pista: el nÃºmero es {pista} que tu respuesta.")
                elif intento == 3:
                    diferencia = abs(adivinanza - numero_ajustado)
                    print(f"Ãšltimo intento fallido. Estuviste a {diferencia} de distancia.")
        except ValueError:
            print("Debes ingresar un nÃºmero entero.")

   
    print(f"\nPerdiste. El nÃºmero era: {numero_ajustado}. Â¡Intenta nuevamente!")


juego_numero_ajustado()
